{
  "name": "codenexus",
  "displayName": "CodeNexus",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Package Explorer",
          "icon": "air.png"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "myFolderStructureView",
          "name": "Folder Structure"
        },
        {
          "id": "package-outline",
          "name": "Code Smells detected"
        }
      ]
    },
    "commands": [
      {
        "command": "codenexus.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "package-explorer.refreshFolderStructure",
        "title": "Refresh Folder Structure"
      }
    ],
    "configuration": {
        "properties": {
            "codenexus.showInlineDiagnostics": {
                "type": "boolean",
                "default": false
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "codenexus": "file:",
    "ws": "^8.18.0"
  }
}
