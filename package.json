{
  "publisher": "CodeNexus",
  "name": "codenexus",
  "displayName": "CodeNexus",
  "description": "A tool for analyzing and refactoring code with visualizations.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:extension.learnMore",
    "onCommand:extension.refactorProblem",
    "onCommand:codenexus.showAST",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codenexus-explorer",
          "title": "CodeNexus",
          "icon": "air.png",
          "when": "true"
        }
      ]
    },
    "views": {
      "codenexus-explorer": [
        {
          "id": "package-outline",
          "name": "Code Smells detected"
        },
        {
          "id": "myFolderStructureView",
          "name": "Folder Structure"
        },
        {
          "id": "manualCodeView",
          "name": "Trigger Code Analysis"
        }
      ]
    },
    "commands": [
      {
        "command": "codenexus.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "package-explorer.refreshFolderStructure",
        "title": "Refresh Folder Structure"
      },
      {
        "command": "package-explorer.refreshCodeSmells",
        "title": "Refresh code smell"
      },
      {
        "command": "codenexus.runAnalysis",
        "title": "Codenexus: Run Analysis"
      },
      {
        "command": "manualCodeView.toggleTick",
        "title": "Check"
      },
      {
        "command": "extension.refactorProblem",
        "title": "Refactor Problem"
      },
      {
        "command": "extension.learnMore",
        "title": "Learn More"
      },
      {
        "command": "codenexus.showAST",
        "title": "Show Depdency Visualization"
      }
    ],
    "configuration": {
      "properties": {
        "codenexus.showInlineDiagnostics": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "menus": {
      "view/item/context": [
        {
          "command": "extension.learnMore",
          "when": "editorTextFocus && diagnosticFocus"
        },
        {
          "command": "manualCodeView.toggleTick",
          "when": "viewItem == 'manualCodeItem'",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "codenexus.showAST",
          "when": "view == package-outline",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "codenexus.runAnalysis",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "codenexus": "file:",
    "ws": "^8.18.0"
  }
}
